  "version": "2.0.0",
  "tasks": [
    {
      "label": "mpv",
      "type": "shell",
      "command": "mpv --msg-level=subtitle_translate_mpv=trace --profile=infinite ${workspaceFolder}/test.*",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}